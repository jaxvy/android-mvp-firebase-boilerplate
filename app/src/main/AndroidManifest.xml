<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.jaxvy.boilerplate">

    <application
        android:name="me.jaxvy.boilerplate.BoilerplateApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="me.jaxvy.boilerplate.ui.activity.LoginSignupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="me.jaxvy.boilerplate.ui.activity.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
